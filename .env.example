# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Freight Document Platform

# Email Configuration
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_NO_REPLY_EMAIL=no-reply@yourdomain.com

# Feature Flags
NEXT_PUBLIC_ENABLE_EMAIL_PREVIEW=true
NEXT_PUBLIC_ENABLE_TEST_MODE=false

# Rate Limiting
EMAIL_RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
EMAIL_RATE_LIMIT_MAX_PER_WINDOW=10  # Max emails per window

# Development
NODE_ENV=development

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com
JWT_SECRET=your-jwt-secret
UNSUBSCRIBE_TOKEN_SECRET=your-unsubscribe-secret
UNSUBSCRIBE_TOKEN_EXPIRY=7d

# Optional: Analytics
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Optional: Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_ENABLE_SENTRY=false

# Optional: AI Services
OPENAI_API_KEY=your-openai-api-key 